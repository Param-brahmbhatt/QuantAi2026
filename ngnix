server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;

    # React static build
    root /home/ubuntu/quantai/Quantai_Frontend/quantAI-frontend/dist;
    index index.html;

    # API requests to Django backend via Unix socket
    location /api/ {
        proxy_pass http://unix:/run/gunicorn-quantai.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Static files (from Django collectstatic)
    location /static/ {
        alias /home/ubuntu/quantai/Quantai_Backend/backend/static/;
        access_log off;
        expires 10d;
    }

    # Media uploads (if used)
    location /media/ {
        alias /home/ubuntu/quantai/Quantai_Backend/backend/media/;
        access_log off;
        expires 10d;
    }

    # Let React handle client-side routing (SPA)
    location / {
        try_files $uri $uri/ /index.html;
    }
}